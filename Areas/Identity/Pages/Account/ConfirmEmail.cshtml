@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}
<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

@* <partial name="_StatusMessage" model="Model.StatusMessage" /> *@
<div class="section section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="register-login-form text-center">
                    <div class="form-wrapper">
                        <h3 class="title">@ViewData["Title"]</h3>
                        <div class="card p-4 border-0 shadow-sm mt-4">
                            <div class="card-body">
                                <partial name="_StatusMessage" model="Model.StatusMessage" />
                                <p class="mt-3">Your email has been successfully confirmed. You can now log in to your account.</p>
                                <a asp-page="./Login" class="btn btn-primary w-100 mt-3">Go to Login</a>
                            </div>
                        </div>                 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
