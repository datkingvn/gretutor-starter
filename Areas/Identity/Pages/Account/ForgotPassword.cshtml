@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<!-- Reset Password Start -->
<div class="section section-padding">
    <div class="container">
        <!-- Reset Password Wrapper Start -->
        <div class="register-login-wrapper">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <!-- Reset Password Images Start -->
                    <div class="register-login-images">
                        <div class="shape-1">
                            <img src="~/assets/images/shape/shape-26.png" alt="Shape" />
                        </div>

                        <div class="images">
                            <img src="~/assets/images/register-login.png" alt="Register Login" />
                        </div>
                    </div>
                    <!-- Reset Password Images End -->
                </div>
                <div class="col-lg-6">
                    <!-- Reset Password Form Start -->
                    <div class="register-login-form">
                        <h3 class="title">Reset <span>Password</span></h3>
                        <p class="text-muted">Enter your email address to reset your password.</p>
                        <div class="form-wrapper">
                            <form method="post">
                                <!-- Single Form Start -->
                                <div class="single-form">
                                    <input type="email" asp-for="Input.Email" placeholder="Email" class="form-control" required />
                                </div>
                                <!-- Single Form End -->
                                
                                <div class="single-form">
                                    <button type="submit" class="btn btn-primary btn-hover-dark w-100">
                                        Reset Password
                                    </button>
                                </div>
                                
                                <div class="text-center mt-4">
                                    <div class="card p-3 border-0 shadow-sm">
                                        <div class="card-body">
                                            <p class="mb-2">
                                                <a asp-page="./Login" class="text-decoration-none text-primary fw-bold">
                                                    Back to Login
                                                </a>
                                            </p>
                                            <p class="mb-2">
                                                <a asp-page="./Register" class="text-decoration-none text-success fw-bold">
                                                    Register a new account
                                                </a>
                                            </p>
                                            <p class="mb-0">
                                                <a asp-page="./ResendEmailConfirmation" class="text-decoration-none text-warning fw-bold">
                                                    Resend email confirmation
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Reset Password Form End -->
                </div>
            </div>
        </div>
        <!-- Reset Password Wrapper End -->
    </div>
</div>
<!-- Reset Password End -->



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
