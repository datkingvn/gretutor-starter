@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="section">
  <div class="section-padding-02 mt-n10 mb-10">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card shadow border-0 rounded-3 overflow-hidden">
            <div class="row g-0">
              <!-- Sidebar Navigation -->
              <div class="col-md-4 bg-primary text-white">
                <div class="p-4 h-100 d-flex flex-column">
                  <div class="nav flex-column">
                    <partial name="_ManageNav" />
                  </div>
                  <div class="mt-auto text-white-50">
                    <small>Last login: Today</small>
                  </div>
                </div>
              </div>
              <!-- Main Content (Form) -->
              <div class="col-md-8">
                <div class="card-body p-4 p-lg-5">
                  <div class="d-flex align-items-center justify-content-between mb-4">
                    <h3 class="fw-bold">@ViewData["Title"]</h3>
                    <span class="badge bg-success">Active</span>
                  </div>
                  <partial name="_StatusMessage" for="StatusMessage" />

                  <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <div class="mb-4">
                      <label asp-for="Input.OldPassword" class="form-label fw-bold">Current Password</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-3">
                          <i class="bi bi-key"></i>
                        </span>
                        <input asp-for="Input.OldPassword" class="form-control bg-light py-2 fs-6" placeholder="Please enter your old password." style="font-size: 0.875rem;" />
                      </div>
                      <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                      <label asp-for="Input.NewPassword" class="form-label fw-bold">New Password</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-3">
                          <i class="bi bi-shield-lock"></i>
                        </span>
                        <input asp-for="Input.NewPassword" class="form-control bg-light py-2 fs-6" autocomplete="new-password" placeholder="Please enter your new password." style="font-size: 0.875rem;" />
                      </div>
                      <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                      <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-3">
                         <i class="bi bi-unlock"></i>
                        </span>
                        <input asp-for="Input.ConfirmPassword" class="form-control bg-light py-2 fs-6" autocomplete="new-password" placeholder="Please confirm your new password." style="font-size: 0.875rem;" />
                      </div>
                      <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                      <button type="submit" class="btn btn-primary btn-md">
                        <i class="bi bi-arrow-repeat me-2"></i>Update Password
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Add Bootstrap Icons if not already included -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
