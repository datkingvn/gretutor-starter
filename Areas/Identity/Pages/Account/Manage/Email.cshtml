@page "/User/Email"
@model GreTutor.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
    
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="section">
  <div class="section-padding-02 mt-n10 mb-10">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card shadow border-0 rounded-3 overflow-hidden">
            <div class="row g-0">
              <!-- Sidebar Navigation -->
              <div class="col-md-4 bg-primary text-white">
                <div class="p-4 h-100 d-flex flex-column">
                  <div class="nav flex-column">
                    <partial name="_ManageNav" />
                  </div>
                  <div class="mt-auto text-white-50">
                    <small>Last login: Today</small>
                  </div>
                </div>
              </div>
              <!-- Main Content (Form) -->
              <div class="col-md-8">
                <div class="card-body p-4 p-lg-5">
                  <div class="d-flex align-items-center justify-content-between mb-4">
                    <h3 class="fw-bold"> @ViewData["Title"] </h3>
                    <span class="badge bg-success">Active</span>
                  </div>
                  <partial name="_StatusMessage" for="StatusMessage" />
                  <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger text-center mb-3" role="alert"></div>

                    @if (Model.IsEmailConfirmed) {
                      <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-bold">Current Email</label>
                        <div class="input-group">
                          <span class="input-group-text bg-primary text-white py-1 px-4">
                            <i class="bi bi-envelope-check"></i>
                          </span>
                          <input asp-for="Email" class="form-control bg-light py-2 fs-5" placeholder="Please enter your email." disabled />
                          <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                          </div>
                        </div>
                      </div>
                    } else {
                      <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-bold">Current Email</label>
                        <div class="input-group">
                          <span class="input-group-text bg-primary text-white py-1 px-4">
                            <i class="bi bi-envelope"></i>
                          </span>
                          <input asp-for="Email" class="form-control bg-light py-2 fs-5" placeholder="Please enter your email." disabled />
                          <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-primary">
                            <i class="bi bi-send me-1"></i>Verify
                          </button>
                        </div>
                      </div>
                    }

                    <div class="mb-4">
                      <label asp-for="Input.NewEmail" class="form-label fw-bold">New Email</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-4">
                          <i class="bi bi-envelope-plus"></i>
                        </span>
                        <input asp-for="Input.NewEmail" class="form-control bg-light py-2 fs-5" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                      </div>
                      <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                      <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-md">
                        <i class="bi bi-arrow-repeat me-2"></i>Change Email
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Add Bootstrap Icons if not already included -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}