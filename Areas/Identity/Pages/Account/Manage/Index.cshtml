@page "/User/Profile"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->
<div class="section">
  <div class="section-padding-02 mt-n10 mb-10">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card shadow border-0 rounded-3 overflow-hidden">
            <div class="row g-0">
              <!-- Sidebar Navigation -->
              <div class="col-md-4 bg-primary text-white">
                <div class="p-4 h-100 d-flex flex-column">
                  <div class="nav flex-column">
                    <partial name="_ManageNav" />
                  </div>
                  <div class="mt-auto text-white-50">
                    <small>Last login: Today</small>
                  </div>
                </div>
              </div>
              <!-- Main Content -->
              <div class="col-md-8">
                <div class="card-body p-4 p-lg-5">
                  <div class="d-flex align-items-center justify-content-between mb-4">
                    <h3 class="fw-bold">@ViewData["Title"]</h3>
                    <span class="badge bg-success">Active</span>
                  </div>
                  <partial name="_StatusMessage" for="StatusMessage" />
                  <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <div class="mb-4">
                      <div class="d-flex align-items-center mb-3">
                        <div class="bg-light rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                          <i class="bi bi-person fs-4"></i>
                        </div>
                        <div>
                          <h5 class="mb-0">@Model.Username</h5>
                          <p class="text-muted mb-0 small">Member since 2025</p>
                        </div>
                      </div>
                    </div>
                    <div class="mb-4">
                      <label asp-for="Username" class="form-label fw-bold text-muted">Username</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-4">
                          <i class="bi bi-person fs-4"></i>
                        </span>
                        <input asp-for="Username" class="form-control bg-light py-2 fs-5" placeholder="Username" disabled />
                      </div>
                    </div>
                    <div class="mb-4">
                      <label asp-for="Input.PhoneNumber" class="form-label fw-bold text-muted">Phone Number</label>
                      <div class="input-group">
                        <span class="input-group-text bg-primary text-white py-1 px-4">
                          <i class="bi bi-telephone fs-4"></i>
                        </span>
                        <input asp-for="Input.PhoneNumber" class="form-control bg-light py-2 fs-5" placeholder="xxx.xxx.xxxx" />
                      </div>
                      <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                      <button type="button" class="btn btn-outline-secondary me-md-2">Cancel</button>
                      <button id="update-profile-button" type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Save Changes </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Add Bootstrap Icons if not already included -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}