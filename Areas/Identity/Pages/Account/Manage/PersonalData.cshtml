@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="container mt-4">
    <div class="row justify-content-center">
        <!-- ManageNav nằm phía trên -->
        <div class="col-md-6 col-lg-5">
            <div class="p-3 bg-white rounded shadow">
                <partial name="_ManageNav" />
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-6 col-lg-5 mt-3">
            <div class="p-4 bg-white rounded shadow">
                <h3 class="text-center mb-3">@ViewData["Title"]</h3>
                @* <partial name="_StatusMessage" for="StatusMessage" /> *@
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p class="text-danger fw-bold">
                    Deleting this data will permanently remove your account, and this cannot be recovered.
                </p>

                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Download</button>
                </form>

                <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-lg btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
