@page "/Register/"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<!-- Register & Login Start -->
<div class="section section-padding">
    <div class="container">
        <!-- Register & Login Wrapper Start -->
        <div class="register-login-wrapper">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <!-- Register & Login Images Start -->
                    <div class="register-login-images">
                        <div class="shape-1">
                            <img src="~/assets/images/shape/shape-26.png" alt="Shape" />
                        </div>
                        <div class="images">
                            <img src="~/assets/images/register-login.png" alt="Register Login" />
                        </div>
                    </div>
                    <!-- Register & Login Images End -->
                </div>
                <div class="col-lg-6">
                    <!-- Register & Login Form Start -->
                    <div class="register-login-form">
                        <h3 class="title">@ViewData["PageTitle"] <span>Register Now</span></h3>
                        <div class="form-wrapper">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div asp-validation-summary="All" class="alert alert-danger text-center" role="alert"></div>
                            }
                            <form method="post">
                                <!-- Single Form Start -->
                                <div class="single-form">
                                    <input asp-for="Input.UserName" class="form-control" placeholder="User Name" />
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                                <!-- Single Form End -->

                                <!-- Email -->
                                <div class="single-form">
                                    <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <!-- Password -->
                                <div class="single-form">
                                    <input asp-for="Input.Password" placeholder="Password" type="password"
                                        class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <!-- Confirm Password -->
                                <div class="single-form">
                                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password"
                                        type="password" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <!-- Buttons -->
                                <div class="single-form">
                                    <button type="submit" class="btn btn-primary btn-hover-dark w-100">Create an
                                        account</button>
                                    <a class="btn btn-secondary btn-outline w-100" href="#">Sign up with Google</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Register & Login Form End -->
                </div>
            </div>
        </div>
        <!-- Register & Login Wrapper End -->
    </div>
</div>
<!-- Register & Login End -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
