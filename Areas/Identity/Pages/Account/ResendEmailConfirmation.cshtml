@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}
<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<!-- Resend Email Confirmation Start -->
<div class="section section-padding">
    <div class="container">
        <div class="register-login-wrapper">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="register-login-form text-center">
                        <h3 class="title">@ViewData["Title"]</h3>
                        <p class="mb-4">Enter your email address to receive a new confirmation link.</p>

                        <div class="form-wrapper">
                            <div class="card p-4 border-0 shadow-sm">
                                <div class="card-body">
                                    <a>Email</a>
                                    <form method="post">
                                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                                        <div class="single-form">
                                            <input asp-for="Input.Email" class="form-control" aria-required="true"
                                                placeholder="name@example.com" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-hover-dark w-100 mt-3">
                                            Resend Confirmation Email
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-page="./Login" class="text-decoration-none text-primary fw-bold">
                                Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Resend Email Confirmation End -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
