@model GreTutor.Models.Entities.Class

@{
    ViewData["Title"] = "Create New Class";
    Layout = "_LayoutDashboard";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
            <h1 class="page-title fw-semibold fs-18 mb-0">Create New Class</h1>
            <div class="ms-md-1 ms-0">
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">GreTutor</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Class", new { area = "Staff" })">Classes</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Class</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header Close -->

        <!-- Class Edit Form -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">
                            Create New Class
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Class name input field -->
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Add other fields if needed -->

                            <!-- Form buttons -->
                            <div class="form-group text-center">
                                <a href="@Url.Action("Index", "Class", new { area = "Staff" })" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Create
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Class Edit Form -->
    </div>
</div>

