@model IEnumerable<GreTutor.Models.Entities.ClassMember>

@{
    ViewData["Title"] = "Member List";
    Layout = "_Layout";
}

<!-- Page Banner -->
@await Html.PartialAsync("_PageBannerStart")

<div class="section section-padding">
    <div class="container">

        <h2 class="mt-3 text-center">Member List</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="container" style="max-width: 800px;">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th class="text-center">Member Name</th>
                    <th class="text-center">Member Email</th>
                    <th class="text-center">Role</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td class="text-center align-middle">@member.User.UserName</td>
                            <td class="text-center align-middle">@member.User.Email</td>
                            <td class="text-center align-middle">@member.Role</td>
                            <td class="text-center align-middle">
                                <form id="removeForm-@member.UserId" method="post" action="/Staff/ClassMember/Remove">
                                    <input type="hidden" name="classId" value="@member.ClassId" />
                                    <input type="hidden" name="userId" value="@member.UserId" />
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmRemove('@member.UserId')">
                                        <i class="bi bi-trash"></i><i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">There are no members in the class.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center m-5">
        <!-- Button Quay láº¡i -->
        <a href="@Url.Action("Index", "Class", new { area = "Staff" })" class="btn btn-secondary">
            <i class="fas fa-backward"></i> Back to List
        </a>
    </div>
</div>


<script>
    function confirmRemove(userId) {
        if (confirm("Are you sure you want to delete this member?")) {
            document.getElementById("removeForm-" + userId).submit();
        }
    }
</script>
