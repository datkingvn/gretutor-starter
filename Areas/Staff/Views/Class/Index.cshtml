@model IEnumerable<GreTutor.Models.Entities.Class>

@{
ViewData["Title"] = "Class Management";
Layout = "_LayoutDashboard";
}


<div class="main-content app-content">
            <div class="container-fluid">

                <!-- Page Header -->
                <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
                    <h1 class="page-title fw-semibold fs-18 mb-0">Class List</h1>
                    <div class="ms-md-1 ms-0">
                        <nav>
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="#">GreTutor</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Class List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- Page Header Close -->

                <!-- Start:: row-2 -->
                <div class="row">
                <div class="col-xl-12">
                <div class="text-right">
                    <a type="button" href="@Url.Action("Create", "Class", new { area = "Staff" })" class="btn btn-info btn-sm mb-3">
                        <i class="ri-add-line fw-semibold align-middle"></i> Add Class
                    </a>
                </div>
            </div>
                    <div class="col-xl-12">
                        <div class="card custom-card">
                            <div class="card-header">
                                <div class="card-title">
                                    Show Class List
                                </div>
                            </div>
                            <div class="card-body">
                              <div id="grid-pagination">
                                <div role="complementary" class="gridjs gridjs-container" style="width: 100%;">
                                  <div class="gridjs-wrapper" style="height: auto;">
                                    <table role="grid" class="gridjs-table" style="height: auto;">
                                      <thead class="gridjs-thead">
                                        <tr class="gridjs-tr">
                                          <th data-column-id="date" class="gridjs-th" style="width: 150px;">
                                            <div class="gridjs-th-content">Class</div>
                                          </th>
                                          <th data-column-id="name" class="gridjs-th" style="width: 150px;">
                                            <div class="gridjs-th-content">Action</div>
                                          </th>
                                        </tr>
                                      </thead>
                                      <tbody class="gridjs-tbody">
                                                          @foreach (var item in Model)
                    {
                                        <tr class="gridjs-tr">
                                          <td data-column-id="name" class="gridjs-td">
                                          <button type="button" class="btn btn-secondary-gradient btn-wave waves-effect waves-light">@Html.DisplayFor(modelItem => item.Name)</button>
                                          </td>
                                          <td data-column-id="id" class="gridjs-td">
                                          <a href="@Url.Action("Edit", "Class", new { area = "Staff", id = item.Id })" class="btn btn-warning btn-sm mb-3">
                                <i class="ri-edit-line"></i> Edit
                            </a>
                            <a href="@Url.Action("Details", "Class", new { area = "Staff", classId = item.Id })" class="btn btn-primary btn-sm mb-3">
                                <i class="fab fa-pagelines"></i> Details
                            </a>

                            <form action="@Url.Action("Delete", "Class", new { area = "Staff", id = item.Id })" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm mb-3" onclick="return confirm('Are you sure you want to delete this class?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                            <a href="@Url.Action("Add", "ClassMember", new { area = "Staff", classId = item.Id })" class="btn btn-secondary btn-sm mb-3">
                                <i class="fas fa-user-edit"></i> Add New Students
                            </a>
                                          </td>
                                        </tr>
                                        }
                                      </tbody>
                                    </table>
                                  </div>
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End:: row-2 -->
                


            </div>
        </div>