@model IEnumerable<GreTutor.Models.Entities.Class>

@{
    ViewData["Title"] = "Class Management";
    Layout = "_Layout";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<h1 class="text-center">Class List</h1>

<div class="text-center">
    <a href="@Url.Action("Create", "Class", new { area = "Staff" })" class="btn btn-primary mb-3">
        Add Class
    </a>
</div>


<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th class="text-center">Class Name</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center align-middle">
                    <a href="@Url.Action("Edit", "Class", new { area = "Staff", id = item.Id })" class="btn btn-warning">
                        Edit
                    </a>
                    <a href="@Url.Action("Details", "Class", new { area = "Staff", classId = item.Id })"
                        class="btn btn-primary">
                        Details
                    </a>

                    <form action="@Url.Action("Delete", "Class", new { area = "Staff", id = item.Id })" method="post"
                        style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this class?');">
                            Delete
                        </button>
                    </form>
                    <a href="@Url.Action("Add", "ClassMember", new { area = "Staff", classId = item.Id })"
                        class="btn btn-secondary">
                        Add New Students
                    </a>

                </td>
            </tr>
        }

    </tbody>
</table>
