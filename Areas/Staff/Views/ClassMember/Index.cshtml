@model IEnumerable<GreTutor.Models.Entities.ClassMember>

@{
    ViewData["Title"] = "Member List";
    Layout = "_LayoutDashboard";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
            <h1 class="page-title fw-semibold fs-18 mb-0">Class Members</h1>
            <div class="ms-md-1 ms-0">
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">GreTutor</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Class Members</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header Close -->

        <div class="row">
            <div class="col-xl-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">Member List</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Member Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var member in Model)
                                        {
                                            <tr>
                                                <td>@member.User.UserName</td>
                                                <td>@member.User.Email</td>
                                                <td><span class="badge bg-primary-transparent">@member.Role</span></td>
                                                <td class="text-center">
                                                    <form id="removeForm-@member.UserId" method="post" action="/Staff/ClassMember/Remove">
                                                        <input type="hidden" name="classId" value="@member.ClassId" />
                                                        <input type="hidden" name="userId" value="@member.UserId" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmRemove('@member.UserId')">
                                                            <i class="bi bi-trash"></i> Remove
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted">There are no members in this class.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center my-4">
            <a href="@Url.Action("Index", "Class", new { area = "Staff" })" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Class List
            </a>
        </div>
    </div>
</div>

<script>
    function confirmRemove(userId) {
        if (confirm("Are you sure you want to remove this member from the class?")) {
            document.getElementById("removeForm-" + userId).submit();
        }
    }
</script>