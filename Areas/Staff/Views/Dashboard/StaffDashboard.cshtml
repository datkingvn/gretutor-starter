@model GreTutor.Areas.Staff.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_Layout";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<h2 class="mb-4 fw-bold">ðŸ“Š Staff Dashboard</h2>

<div class="row g-4">
    <!-- Accounts Dashboard -->
    <div class="col-md-4">
        <div class="card shadow border-0 h-100">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="fas fa-users me-2"></i>
                <span class="fs-5 mb-0">Accounts</span>
            </div>
            <div class="card-body">
                <h2 class="fw-bold">@Model.TotalAccounts</h2>
                <div class="row mt-3">
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-user-shield text-primary"></i>
                                <h6 class="mb-0">Staff</h6>
                                <p class="mb-0 fw-bold">@Model.TotalStaffs</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                <h6 class="mb-0">Tutor</h6>
                                <p class="mb-0 fw-bold">@Model.TotalTutors</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-user-graduate text-info"></i>
                                <h6 class="mb-0">Student</h6>
                                <p class="mb-0 fw-bold">@Model.TotalStudents</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Blog Posts Dashboard -->
    <div class="col-md-4">
        <div class="card shadow border-0 h-100">
            <div class="card-header bg-success text-white d-flex align-items-center">
                <i class="fas fa-blog me-2"></i>
                <span class="fs-5 mb-0">Blog Posts</span>
            </div>
            <div class="card-body">
                <h2 class="fw-bold">@Model.TotalBlogPosts</h2>
                <div class="row mt-3">
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-check-circle text-success"></i>
                                <h6 class="mb-0">Approved</h6>
                                <p class="mb-0 fw-bold">@Model.ApprovedBlogPosts</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-clock text-warning"></i>
                                <h6 class="mb-0">Pending</h6>
                                <p class="mb-0 fw-bold">@Model.PendingBlogPosts</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card text-center bg-light mb-2">
                            <div class="card-body p-2">
                                <i class="fas fa-times-circle text-danger"></i>
                                <h6 class="mb-0">Rejected</h6>
                                <p class="mb-0 fw-bold">@Model.RejectedBlogPosts</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Classes Dashboard -->
    <div class="col-md-4">
        <div class="card shadow border-0 h-100">
            <div class="card-header bg-info text-white d-flex align-items-center">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <span class="fs-5 mb-0">Classes</span>
            </div>
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <h2 class="fw-bold">@Model.TotalClasses</h2>
                <p class="text-muted mb-0">Total Classes</p>
            </div>
        </div>
    </div>
</div>
