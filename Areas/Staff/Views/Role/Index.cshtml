@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "List Role";
    Layout = "_Layout";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center mb-4">
            <h2 class="display-6 fw-bold text-primary">@ViewData["Title"]</h2>
        </div>

        <div class="col-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <table class="table table-bordered table-hover text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in new List<string> { "Tutor", "Staff", "Student" })
                            {
                                <tr>
                                    <td>@role</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 text-center mt-5 mb-5">
        <a class="btn btn-secondary btn-lg" asp-area="Staff" asp-controller="User" asp-action="Index">
            Manage Member
        </a>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
    .table {
        width: 100%;
        max-width: 600px;
        margin: auto;
    }
</style>