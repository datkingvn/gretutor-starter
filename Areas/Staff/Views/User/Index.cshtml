@{
    ViewData["Title"] = "List Members";
    Layout = "_LayoutDashboard"; // đổi layout nếu muốn đồng bộ dashboard
}

<div class="main-content app-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
            <h1 class="page-title fw-semibold fs-18 mb-0">@ViewData["Title"]</h1>
            <div class="ms-md-1 ms-0">
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">GreTutor</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Page Header Close -->

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">User List</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered mb-0 text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Username</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">@user.UserName</td>
                                            <td>
                                                @if (string.IsNullOrEmpty(user.RoleNames))
                                                {
                                                    <a class="btn btn-success btn-sm rounded-pill px-3"
                                                       asp-area="Staff" asp-controller="User" asp-action="AddRole"
                                                       asp-route-id="@user.Id">
                                                        <i class="fas fa-plus-circle me-1"></i> Add Role
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-outline-primary btn-sm rounded-pill px-3"
                                                       asp-area="Staff" asp-controller="User" asp-action="AddRole"
                                                       asp-route-id="@user.Id">
                                                        <i class="fas fa-user-tag me-1"></i> @user.RoleNames
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm rounded-pill px-3"
                                                   asp-area="Staff" asp-controller="User" asp-action="ConfirmDelete"
                                                   asp-route-id="@user.Id">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
