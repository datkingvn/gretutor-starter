@page "/about.html"

@{
  ViewData["Title"] = "Contact";
  ViewData["PageTitle"] = "About";
  ViewData["PageSubtitle"] = "GreTutor";
  Layout = "_Layout";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<!-- About Start -->
<div class="section">
  <div class="section-padding-02 mt-n10">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <!-- About Images Start -->
          <div class="about-images">
            <div class="images">
              <img src="assets/images/about.jpg" alt="About" />
            </div>

            <div class="about-years">
              <div class="years-icon">
                <img src="assets/images/logo-icon.png" alt="About" />
              </div>
              <p><strong>10+</strong> Years Experience</p>
            </div>
          </div>
          <!-- About Images End -->
        </div>
        <div class="col-lg-6">
          <!-- About Content Start -->
          <div class="about-content">
            <h5 class="sub-title">Welcome to Gretutor.</h5>
            <h2 class="main-title">
              Created for the sole purpose of learning to become a
              <span>Master.</span>
            </h2>
            <p>
              GreTutor is an online platform designed to help students
              prepare for the GRE. It offers practice questions, video
              tutorials, and interactive quizzes, tailored to individual
              needs. With a user-friendly interface and advanced
              analytics, GreTutor enhances study strategies, making it a
              valuable resource for graduate school preparation.
            </p>
          </div>
          <!-- About Content End -->
        </div>
      </div>
    </div>
  </div>

  <div class="section-padding-02 mt-n6">
    <div class="container">
      <!-- About Items Wrapper Start -->
      <div class="about-items-wrapper">
        <div class="row">
          <div class="col-lg-4">
            <!-- About Item Start -->
            <div class="about-item">
              <div class="item-icon-title">
                <div class="item-icon">
                  <i class="flaticon-tutor"></i>
                </div>
                <div class="item-title">
                  <h3 class="title">Top Instructors</h3>
                </div>
              </div>
              <p>
                GreTutor's top instructors are experienced educators
                specializing in GRE preparation. They offer personalized
                strategies to meet individual learning needs, helping
                students build confidence for the exam.
              </p>
              <p>
                With engaging teaching methods, these instructors create a
                supportive environment that fosters growth.
              </p>
            </div>
            <!-- About Item End -->
          </div>
          <div class="col-lg-4">
            <!-- About Item Start -->
            <div class="about-item">
              <div class="item-icon-title">
                <div class="item-icon">
                  <i class="flaticon-coding"></i>
                </div>
                <div class="item-title">
                  <h3 class="title">Portable Program</h3>
                </div>
              </div>
              <p>
                Designed for busy students, this program allows access to
                resources anytime, anywhere, ensuring you can study at
                your own pace.
              </p>
              <p>
                Whether you're commuting, at the gym, or relaxing at home,
                the Portable Program makes it easy to stay on track and
                boost your test readiness.
              </p>
            </div>
            <!-- About Item End -->
          </div>
          <div class="col-lg-4">
            <!-- About Item Start -->
            <div class="about-item">
              <div class="item-icon-title">
                <div class="item-icon">
                  <i class="flaticon-increase"></i>
                </div>
                <div class="item-title">
                  <h3 class="title">Improve Quickly</h3>
                </div>
              </div>
              <p>
                This targeted approach focuses on identifying and
                addressing weak areas through intensive practice and
                personalized feedback.
              </p>
              <p>
                Whether you're starting your preparation or looking to
                boost your scores, this program accelerates learning and
                helps you achieve your goals in a short timeframe.
              </p>
            </div>
            <!-- About Item End -->
          </div>
        </div>
      </div>
      <!-- About Items Wrapper End -->
    </div>
  </div>
</div>
<!-- About End -->

