@model IEnumerable<GreTutor.Models.Entities.BlogPost>

@{
    ViewData["Title"] = "Home Blog";
    Layout = "_Layout";
    var currentUser = ViewBag.CurrentUser as string;
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light shadow-sm rounded">
        <h2 class="text-dark fw-bold mb-0">
            <i class="bi bi-journal-text text-primary"></i> Blog Posts
        </h2>
    </div>

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark text-white">
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Created</th>
                <th>Author</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => blog.Title)</td>
                    <td>@Html.DisplayFor(modelItem => blog.Content)</td>
                    <td>@blog.Created.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(blog.User?.UserName ?? "Unknown")</td> <!-- ðŸŸ¢ Hiá»ƒn thá»‹ tÃªn user -->

                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@blog.BlogId" class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Details
                        </a>

                        @if (blog.User?.UserName == currentUser)
                        {
                            <a asp-action="Edit" asp-route-id="@blog.BlogId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@blog.BlogId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
