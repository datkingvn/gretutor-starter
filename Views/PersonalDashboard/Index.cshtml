@model GreTutor.Models.ViewModels.PersonalDashboardViewModel

@{
    ViewData["Title"] = "My Dashboard";
    Layout = "_Layout";
}

<!-- Page Banner Start -->
@await Html.PartialAsync("_PageBannerStart")
<!-- Page Banner End -->

<div class="section section-padding-02 py-5 bg-light">
    <div class="container">
        <h2 class="mb-5 fw-bold text-center">ðŸ‘¤ My Dashboard</h2>

        <div class="row g-4">
            <!-- Blog Posts Card -->
            <div class="col-md-4">
                <div class="card shadow border-0 rounded-3">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                             style="width:70px; height:70px;">
                            <i class="fas fa-blog fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">Blog Posts</h5>
                        <h2 class="fw-bold my-3">
                            @(@Model.PendingBlogPosts + @Model.ApprovedBlogPosts + @Model.RejectedBlogPosts)
                        </h2>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                Pending
                                <span class="badge bg-warning">@Model.PendingBlogPosts</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                Approved
                                <span class="badge bg-success">@Model.ApprovedBlogPosts</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                Rejected
                                <span class="badge bg-danger">@Model.RejectedBlogPosts</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Meetings Card -->
            <div class="col-md-4">
                <div class="card shadow border-0 rounded-3">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-info text-white d-inline-flex align-items-center justify-content-center mb-3"
                             style="width:70px; height:70px;">
                            <i class="fas fa-video fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">Meetings</h5>
                        <h2 class="fw-bold my-3">@Model.TotalMeetings</h2>
                        <p class="text-muted">Total meetings in your classes</p>
                    </div>
                </div>
            </div>

            <!-- Documents Card -->
            <div class="col-md-4">
                <div class="card shadow border-0 rounded-3">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-secondary text-white d-inline-flex align-items-center justify-content-center mb-3"
                             style="width:70px; height:70px;">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold">Documents</h5>
                        <h2 class="fw-bold my-3">@Model.TotalDocuments</h2>
                        <p class="text-muted">Documents shared in your classes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>