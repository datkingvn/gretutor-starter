  <style>
    /* Nền tổng thể khi bật dark mode */
    body.dark-mode {
      background-color: #121212;
    }

    /* Các khu vực nền dark, giữ nguyên màu chữ gốc */
    .dark-mode .card,
    .dark-mode .table,
    .dark-mode .header-main,
    .dark-mode .alert,
    .dark-mode .slider-section,
    .dark-mode .footer-section,
    .dark-mode .section,
    .dark-mode .slider-content,
    .dark-mode .call-to-action-wrapper,
    .dark-mode .how-it-work-wrapper,
    .dark-mode .testimonial-wrapper {
      background-color: #1e1e1e !important;
      color: inherit !important;
    }

    /* Giữ nguyên màu chữ cho tất cả thành phần văn bản */
    .dark-mode h1,
    .dark-mode h2,
    .dark-mode h3,
    .dark-mode h4,
    .dark-mode h5,
    .dark-mode h6,
    .dark-mode p,
    .dark-mode span,
    .dark-mode a,
    .dark-mode .main-title,
    .dark-mode .sub-title,
    .dark-mode .title,
    .dark-mode .testimonial-content,
    .dark-mode .designation,
    .dark-mode .how-it-work-wrapper h2,
    .dark-mode .how-it-work-wrapper h3,
    .dark-mode .how-it-work-wrapper h5,
    .dark-mode .how-it-work-wrapper p,
    .dark-mode .how-it-work-wrapper span {
      color: #inherit !important;
    }

    /* Nút trong dark mode */
    .dark-mode .btn-outline-primary {
      border-color: #888;
      color: inherit;
    }

    .dark-mode .btn-outline-primary:hover {
      background-color: #444;
      color: #fff;
    }

    /* Menu dropdown */
    .dark-mode .sub-menu {
      background-color: #222;
    }

    .dark-mode .sub-menu a:hover {
      background-color: #333;
    }

    /* Nút toggle dark mode */
    .dark-mode-toggle-btn {
      background: transparent;
      border: none;
      font-size: 20px;
      cursor: pointer;
      padding: 5px;
      color: inherit;
    }

    .dark-mode-toggle-btn:hover {
      color: #ffd700;
    }

    /* Ngăn chế độ dark làm tối phần Call to Action */
    .dark-mode .call-to-action-wrapper {
      background-color: #e9f7f0 !important;
      /* giữ nguyên nền xanh nhạt */
      color: #1c1d1f !important;
      /* giữ nguyên màu chữ đậm */
    }

    .dark-mode .call-to-action-wrapper h2,
    .dark-mode .call-to-action-wrapper h5,
    .dark-mode .call-to-action-wrapper p,
    .dark-mode .call-to-action-wrapper span {
      color: #1c1d1f !important;
      /* giữ nguyên text đậm như light mode */
    }


    /* Footer trong dark mode */
    .dark-mode .footer-section {
      background-color: #121212;
      color: #e0e0e0;
    }

    .dark-mode .footer-section a {
      color: #ccc;
    }

    .dark-mode .footer-section a:hover {
      color: #fff;
    }

    .dark-mode .footer-section input {
      background-color: #1e1e1e;
      color: #e0e0e0;
      border: 1px solid #555;
    }

    .dark-mode .footer-section .btn {
      background-color: #2c2c2c;
      color: #eee;
      border-color: #444;
    }
  </style>


</head>

